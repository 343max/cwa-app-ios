# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:ios)

platform :ios do

  before_all do
    setup_circle_ci
  end

  desc "Build and test app without any additional steps"
  lane :build_and_test do

    # Build
    build_ios_app(
      skip_codesigning: true,
      skip_archive: true
    )

    # Unit Tests
    # Uncomment when Apple resolved the issue to use ENTemporaryExposureKey in simulator
    # run_tests( scheme: "ENATests" )

    # UI Tests
    # Uncomment when ready
    # run_tests( scheme: "ENAUITests" )
  end

  desc "Generate screenshots from XCUITests"
  lane :grab_screenshots do

    # Build
    build_ios_app(
      skip_codesigning: true,
      skip_archive: true
    )

    # UI Tests
    # Uncomment when ready
    run_tests( scheme: "ENAUITests" )
  end

end
